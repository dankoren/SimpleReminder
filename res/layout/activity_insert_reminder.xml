<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	     >
	    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:layout_gravity="center"
	     >
	    <EditText 
	        android:id="@+id/headline_et"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="30dp"
	        android:layout_marginTop="20dp"
	        android:layout_marginRight="45dp"
	        android:layout_marginLeft="45dp"
	        android:gravity="center"
	        android:hint="HeadLine"
	        android:maxLength="20"
	        android:textSize="20sp"
	        />
	    
	    <RadioGroup 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:checkedButton="@+id/radio_once"
			android:layout_marginLeft="25dp">
				<RadioButton 
					android:id="@+id/radio_once"
	               	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:text="Once"
	            	android:layout_weight="0.5"
	            	android:onClick="radio_btn_click"/> 
	            <RadioButton 
	                android:id="@+id/radio_daily"
	                android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:layout_weight="0.5"
	            	android:text="Daily"
	            	android:onClick="radio_btn_click"/>    
		</RadioGroup>
	    
	    
	    <TableRow 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="20dp"
	        android:layout_marginBottom="20dp">
	        <TextView 
	            android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Date:"
		        android:textStyle="bold|italic"
		        android:textSize="20sp"/>
	        
	        <Button 
	            android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:id="@+id/date_btn"
		        android:layout_margin="5dp"
		        style="@style/SpinnerButton"
		        android:onClick="date_btn_click"/>
	        
	    </TableRow>
	    <TableRow
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="20dp">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Time:"
	            android:textStyle="bold|italic"
	        	android:textSize="20sp"/>
	        
	        <Button 
		            android:id="@+id/time_btn"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="0.5"
		            style="@style/SpinnerButton"
		            android:onClick="time_btn_click"
	            />       
	    </TableRow>
	    <EditText 
	        android:id = "@+id/details_et"
	        android:hint="More Information..."
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="20dp"
	        android:maxLines="3"
			/>
    </LinearLayout>
    </LinearLayout> 

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="66dip"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#555"
        >
        <ImageView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.50"
            android:scaleType="fitXY"
        	android:onClick="confirm_btn_click"
        	android:src="@drawable/confirm_btn"
        />
    	<View
        	android:layout_marginLeft="0dp"
        	android:layout_marginRight="0dp"
        	android:layout_width="1dip"
        	android:layout_height="fill_parent"
        	android:background="#777"/>
        <ImageView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight=".50"
            android:scaleType="fitXY"
        	android:onClick="cancel_btn_click"
        	android:src="@drawable/cancel_btn"
        />
    </LinearLayout>   
</RelativeLayout>